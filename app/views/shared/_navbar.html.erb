      <div class="md:hidden">
        <button class="text-white" data-action="click->search#toggleMobileMenu">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="md:hidden bg-gray-800 text-white p-4" id="mobileMenu" data-target="search.mobileMenu">
