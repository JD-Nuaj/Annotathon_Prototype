<nav class="fixed top-0 left-0 w-full bg-gray-800 text-white shadow-lg z-50 py-4" data-controller="search">
  <div class="container mx-auto px-6 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
      <%= image_tag 'logo.png', alt: 'Annotathon Logo', class: 'h-12 w-12 rounded-full mr-4' %>
      <span class="text-xl font-bold">Annotathon-Prototype v2</span>
    </div>

    <!-- Liens visibles sur écran medium et plus -->
    <div class="hidden md:flex space-x-8">
      <%= link_to "Home", root_path, class: "hover:text-gray-300" %>
      <%= link_to "Rule Book", rule_book_path, class: "hover:text-gray-300" %>
      <%= link_to "Forum", forums_path, class: "hover:text-gray-300" %>
      <%= link_to "New Account", new_user_registration_path, class: "hover:text-gray-300" %>
      <%= link_to "Help", help_path, class: "hover:text-gray-300" %>
    </div>

    <!-- Menu utilisateur et icône de recherche -->
    <div class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete, turbo_stream: "true" }, class: "bg-orange-500 text-white px-6 py-2 rounded-lg hover:bg-orange-400 transition duration-200" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "bg-orange-500 text-white px-6 py-2 rounded-lg hover:bg-orange-400 transition duration-200" %>
      <% end %>

      <!-- Icône de recherche (visible sur grands écrans) -->
      <div class="hidden md:block relative">
        <button type="button" data-action="click->search#toggleSearch" class="text-white">
          <i class="fas fa-search"></i>
        </button>

        <!-- Barre de recherche (visible uniquement sur grands écrans) -->
        <div id="searchBar" class="absolute hidden bg-gray-800 text-white top-0 right-0 mt-10 p-4 rounded-lg w-full sm:w-64" data-target="search.searchBar">
          <div class="flex flex-col gap-4">
            <input type="text" placeholder="Search..." class="bg-gray-900 text-white px-4 py-2 rounded-md w-full focus:outline-none sm:w-full" />
            <a href="https://www.linkedin.com/in/juan-descoux-897a41301/" target="_blank" class="text-blue-400 hover:text-blue-300 text-sm">Qui suis-je ?</a>
          </div>
        </div>
      </div>

      <!-- Menu mobile (hamburger) - visible uniquement sur écrans petits -->
      <div class="md:hidden">
        <button class="text-white" data-action="click->search#toggleMobileMenu">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Menu mobile -->
  <div class="md:hidden bg-gray-800 text-white p-4 hidden" data-target="search.mobileMenu">
    <%= link_to "Home", root_path, class: "block hover:text-gray-300" %>
    <%= link_to "Rule Book", rule_book_path, class: "block hover:text-gray-300" %>
    <%= link_to "Forum", forums_path, class: "block hover:text-gray-300" %>
    <%= link_to "New Account", new_user_registration_path, class: "block hover:text-gray-300" %>
    <%= link_to "Help", help_path, class: "block hover:text-gray-300" %>

    <!-- Lien "Qui suis-je ?" uniquement visible sur mobile -->
    <a href="https://www.linkedin.com/in/juan-descoux-897a41301/" target="_blank" class="block text-blue-400 hover:text-blue-300 mt-4 text-sm">Qui suis-je ?</a>
  </div>
</nav>
