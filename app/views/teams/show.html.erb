<div class="container mx-auto my-8 p-4 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4"><%= @team.name %></h1>
  <p class="text-gray-700">
    Institution: <%= @team.institution %><br>
    Start Date: <%= @team.start_date %><br>
    End Date: <%= @team.end_date %>
  </p>
  <div class="mt-4 flex space-x-4">
    <%= link_to "Edit", edit_team_path(@team), class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
    <%= link_to "Back", teams_path, class: "px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600" %>
  </div>
</div>
