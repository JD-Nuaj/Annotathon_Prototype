<section class="flex justify-center items-center min-h-screen bg-cover bg-center" style="background-image: url('https://issues.fr/wp-content/uploads/2023/12/Lenergie-du-plancton-liberer-la-capacite-cachee-de-stockage-du.jpg');">
  <div class="max-w-lg w-full p-10 bg-white bg-opacity-70 rounded-lg shadow-xl">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <!-- Email field -->
      <div class="mb-6">
        <%= f.label :email, class: "block text-lg font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <!-- Password field -->
      <div class="mb-6">
        <%= f.label :password, class: "block text-lg font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <!-- 'Remember me' checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="mb-6 flex items-center">
          <%= f.check_box :remember_me, class: "h-5 w-5 text-indigo-600 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-gray-700" %>
        </div>
      <% end %>

      <!-- Sign in button -->
      <div class="mb-6">
        <%= f.submit "Sign In", class: "w-full py-3 px-4 bg-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

    <% end %>

    <!-- Devise links -->
    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
