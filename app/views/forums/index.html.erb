<!-- app/views/forums/index.html.erb -->
<div class="min-h-screen bg-gray-100 pt-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-semibold text-center text-blue-900 mb-12">Forums</h1>

    <% if @forums.any? %>
      <ul class="space-y-6">
        <% @forums.each do |forum| %>
          <li class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
            <h3 class="text-xl font-semibold text-blue-600 hover:underline">
              <%= link_to forum.name, forum_topics_path(forum) %>
            </h3>
            <p class="mt-2 text-gray-600"><%= forum.description %></p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-center text-gray-600">No forums available at the moment.</p>
    <% end %>
  </div>
</div>
